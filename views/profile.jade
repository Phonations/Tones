extends layout

block content
  script(type='text/javascript', src='/javascripts/profile.js')
  include nav
  div.container.profile
   div.span12.header
    div.module.img-rounded
     div.hero-img
      img(src="images/header-profile.png")
     div.module-inner
      img(src='/images/avatar.jpg', width="95px").img-polaroid.avatar
      h3 #{username}      
      - var i = 1
      if (i == 1)
       button.btn.btn-success.add-friend.float-right
        i.icon-plus
        |  add Friend
      else
       button.btn.edit-profile.float-right 
        i.icon-edit-large
        | Edit Profile
      div.clear
     div.module-inner.user-infos
      p
       span.muted Currently watching 
       strong "Tame Impala - Innerspeaker" 
       span.muted on 
       a(href="#")
        strong Psychedelic Rock  
       span.muted station with 
       a(href="#")
        strong 5 others 
   div.span3.left-column
    div.module.img-rounded
     ul.nav.nav-list.profile-sidenav
      li
       a(href-"#")
        i.icon-chevron-right
        i.icon-beer
        strong Lastest Tones
      li.active
       a(href-"#")
        i.icon-chevron-right
        i.icon-list
        strong Stations
      li.last
       a(href-"#")
        i.icon-chevron-right
        i.icon-group
        strong Friends
   div.span9.left-column
    div.module.img-rounded
     div.module-title
       i.icon-list
       strong  Tibz's stations
       i.icon-chevron-down.float-right
       button.btn.btn-small.btn-success.add-friend.float-right
        i.icon-plus
        |  add Station
     div.item-station.module-inner(id='id_station')
      img(src="images/avatar.jpg")
      div.station-text
       p 
        strong Psychedelic Rock
       p.muted 6 users toning
       p created by 
        span.label.label-warning Tibz
       button.btn.btn-info join
      div.clear
     div.item-station.module-inner(id='id_station')
      img(src="images/avatar.jpg")
      div.station-text
       p 
        strong Psychedelic Rock
       p.muted 6 users toning
       p created by 
        span.label.label-warning Tibz
       button.btn.btn-info join
      div.clear
    div.module.img-rounded
     div.module-title
       i.icon-thumbs-up
       strong  Stations liked
       i.icon-chevron-up.float-right
