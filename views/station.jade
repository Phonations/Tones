
extends layout

block content
  script(type='text/javascript', src='/javascripts/libs/swfobject.js')
  script(type='text/javascript', src='/javascripts/tones.player.js')
  script(type='text/javascript', src='/javascripts/tones.playlist.js')
  script(type='text/javascript', src='/javascripts/tones.item.js')
  script(type='text/javascript', src='/javascripts/tones.search.js')
  script(type='text/javascript', src='/javascripts/tones.users.js')
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='/javascripts/station.js')
  include nav_station
  div.container.station
   div.span4.left-column
    div.module.img-rounded
     include user_info
    div.module.img-rounded.users
     include connected_users
    div.module.img-rounded
     div.module-title
      i.icon-comment
      strong  Chat
     textarea(row="3",placeHolder="your message").comment
     div.chat-box.module-inner
      div.message.img-rounded.youspeak
       img(src='/images/avatar.jpg', width="40px").img-rounded.avatar
       div.message-text
        small.muted thibautdelille  
        br
        small Lorem ipsum dolor sit amet
      div.message.img-rounded
       img(src='/images/avatar.jpg', width="40px").img-rounded.avatar
       div.message-text
        small.muted thibautdelille  
        br
        small Mauris diam massa, consequat eu volutpat et, pretium quis urna. Ut.
      div.message.img-rounded
       img(src='/images/avatar.jpg', width="40px").img-rounded.avatar
       div.message-text
        small.muted thibautdelille  
        br
        small Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus hendrerit dolor eu ligula ultrices gravida. Phasellus a pretium ante. Mauris diam massa, consequat eu volutpat et, pretium quis urna. Ut.
   div.span8 
    div.module.img-rounded
     div.module-inner 
      h1 #{station.name}
    div.module.img-rounded.player-wrap
     div#ytapiplayer.player
      div.inner-player There is no videos in the playlist, use the search to add videos in the  playlist!
     div.module-title
      i.icon-play
      strong  Now playing 
     if station.tones.length > 0 
      - var tone = station.tones[0]
       include tone_item
     else
       div.tone.module-inner
        p there is no music on the playlist
    div.module.img-rounded.playlist
     include tone_playlist 
   div.list-search.span6
  